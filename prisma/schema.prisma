generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(cuid())
  email    String   @unique
  password String
  children Child[]
}

model Child {
  id        String    @id @default(cuid())
  name      String
  birthDate DateTime
  sex       String
  userId    String
  user      User      @relation(fields: [userId], references: [id])
  symptoms  Symptom[]
}

model Symptom {
  id        String   @id @default(cuid())
  type      String
  timestamp DateTime @default(now())
  value     String?
  childId   String
  child     Child    @relation(fields: [childId], references: [id])
}